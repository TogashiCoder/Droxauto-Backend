APP_NAME=DroxStock
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.droxstock.com

LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=droxstock
DB_USERNAME=droxstock
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@droxstock.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3, SES, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=droxstock-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=api.droxstock.com
SESSION_DOMAIN=.droxstock.com

# Security
TRUSTED_PROXIES=*
FORCE_HTTPS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Scramble API Documentation
SCRAMBLE_ENABLED=true
SCRAMBLE_PATH=/docs/api

# Role Configuration (Optional - uses defaults if not set)
ROLE_ADMIN=admin
ROLE_MANAGER=manager
ROLE_BASIC_USER=basic_user
ROLE_USER=user
